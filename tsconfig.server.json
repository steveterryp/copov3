{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noEmit": false,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["server.ts", "ws-server.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
